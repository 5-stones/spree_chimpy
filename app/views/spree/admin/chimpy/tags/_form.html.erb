<div data-hook="admin_tag_form_fields">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h1 class="panel-title">Overview</h1>
    </div>
    <div class="panel-body">
      <div class="row">
        <div class="col-sm-12 col-md-6">
          <%= f.field_container :name, class: ["form-group"], 'data-hook' => "tag_name" do %>
            <%= f.label :name, Spree.t(:name) %> <span class="required">*</span>
            <%= f.text_field :name, class: 'form-control' %>
            <%= f.error_message_on :name %>
          <% end %>
        </div>

        <div class="form-group field col-sm-12 col-md-6">
          <%= f.label :external_id, 'External ID' %> <span class="required">*</span>
          <%= f.text_field :external_id, class: 'form-control', readonly: true, placeholder: 'Generated by MailChimp' %>
        </div>
      </div>
    </div>
  </div>
  <div data-hook="additional_tag_fields"></div>
</div>
